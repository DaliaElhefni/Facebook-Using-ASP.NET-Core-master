@model RegisterViewModel

<form method="post" action="../Start/Register">
    <div id="div2">
        <h1>Create an account</h1>
        <p>It's free and always will be.</p>
        <li>
            <input type="text" asp-for="FirstName" placeholder="First Name" id="firstname" required>
            <span asp-validation-for="FirstName"></span>
        </li>
        <li>
            <input type="text" asp-for="LastName" placeholder="Last Name" id="surname" required>
            <span asp-validation-for="LastName"></span>
        </li>
        <li>
            <input type="email" asp-for="Email" placeholder="Email Address" required>
            <span asp-validation-for="Email"></span>
        </li>
        <li>
            <input type="password" asp-for="Password" placeholder="New Password" required>
            <span asp-validation-for="Password"></span>
        </li>
        <li>
            <input type="password" asp-for="ConfirmedPassword" placeholder="Confirm Password" required>
            <span asp-validation-for="ConfirmedPassword"></span>
        </li>
        <p>Birthday</p>
        <li>
            <input type="date" id="birthday" asp-for="Birthday" required>
            <a href="">Why do I need to provide my date of birth?</a>
        </li>
        <li><input asp-for="Gender" type="radio" value="Female" required>Female <input asp-for="Gender" type="radio" value="Male" required>Male</li>
        <li id="terms">By clicking Create an account, you agree to our <a href="">Terms</a> and that <br>you have read our <a href="">Data Policy</a>, including our <a href="">Cookie Use</a>.</li>
        <li><input type="submit" value="Create an account"></li>
        <li id="create_page"><a href="">Create a Page</a> for a celebrity, band or business.</li>
    </div>
</form>